<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.linker.mapper.UserMapper">

	<insert id="insertMember">
	INSERT INTO
	linker.user(email,password,nickname)
	VALUES(#{email},#{password},#{nickname})
	</insert>

	<update id="createAuthKey">
	UPDATE linker.user SET authCode = #{authCode}
	WHERE email =#{email}
	</update>
   
    <update id="status">
    UPDATE linker.user SET status = 1
    WHERE email=#{email}
    </update>
   
   <!-- 구글 회원가입 -->
   <insert id="insertGoogle">
   INSERT INTO  
   linker.user(email,nickname,google)
   VALUES (#{email},#{nickname},1)
   </insert>
   
   <!-- 구글 로그인 처음인지 확인 -->
   <select id="serchGoogle" resultType="UserVO">
   SELECT *
   FROM linker.user
   WHERE email=#{email}
   </select>
 
</mapper>