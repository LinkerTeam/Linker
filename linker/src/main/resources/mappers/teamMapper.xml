<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.linker.mapper.teamMapper">

	<sql id="updateProject">
		<if test="name != null"> SET name = #{name}</if>
	</sql>
	
	<!-- team 생성 -->
	<insert id="createTeam">
		INSERT INTO team(id, name) VALUES(#{id}, #{name});
	</insert>
	
	<!-- team수정(이름) /권한 필요 -->
	<update id="modifyTeam">
		UPDATE team
		<include refid="updateTeam"></include>
		WHERE id = #{id}
	</update>
	
	<!-- team출력 -->
	<select id="listTeam" resultType="teamVO">
		SELECT t.name, t.cdate
		FROM team AS t
		JOIN team_has_user AS thu ON t.id= thu.t_id
	</select>
	
	<!-- team 삭제 /권한 필요-->
	<select id="deleteTeam" resultType="teamVO">
		SELECT t.name, t.cdate
	</select>
</mapper>